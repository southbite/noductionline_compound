<div class="page-header">
    <h1>Users for Account <%- link_to(account.name, path_to.account(account)) %></h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New user', path_to.new_account_user(params.account_id), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (users.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Email address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function (user) { %>
                        <tr>
                            <td><strong><%- link_to(user.emailaddress, path_to.edit_account_user(params.account_id, user)) %></strong></td>
                            <td>
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.account_user(params.account_id, user), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No users were found.</strong> 
            </p>
        <% } %>
    </div>
</div>